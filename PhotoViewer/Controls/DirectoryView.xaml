<?xml version="1.0" encoding="utf-8" ?>
<controls:CollectionViewEx xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                           xmlns:controls="clr-namespace:love2hina.Windows.MAUI.PhotoViewer.Controls"
                           x:Class="love2hina.Windows.MAUI.PhotoViewer.Controls.DirectoryView"
                           BindingContext="{Binding Source={RelativeSource Self}}"
                           ItemsSource="{Binding Directories}"
                           SelectionMode="Single"
                           Tapped="DirectoryView_Tapped">

    <CollectionView.ItemsLayout>
        <LinearItemsLayout Orientation="Vertical" />
    </CollectionView.ItemsLayout>
    <CollectionView.ItemTemplate>
        <DataTemplate>
            <Label Text="{Binding Name}" />
        </DataTemplate>
    </CollectionView.ItemTemplate>
</controls:CollectionViewEx>
