<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:configs="clr-namespace:love2hina.Windows.MAUI.PhotoViewer.Pages.Configs"
             x:Class="love2hina.Windows.MAUI.PhotoViewer.Pages.Configs.CustomRootEditPage"
             x:FactoryMethod="configs:CustomRootEditPage.Create"
             BindingContext="{Binding Source={RelativeSource Self}}"
             Title="ルートエントリ編集">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0" Grid.Column="0"
            Text="名前" />
        <Editor
            Grid.Row="0" Grid.Column="1"
            Text="{Binding RootEntry.Name}" />
        <Label
            Grid.Row="1" Grid.Column="0"
            Text="パス" />
        <Editor
            Grid.Row="1" Grid.Column="1"
            Text="{Binding RootEntry.Path}" />
    </Grid>
</ContentPage>
