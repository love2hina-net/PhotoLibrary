<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:foldable="clr-namespace:Microsoft.Maui.Controls.Foldable;assembly=Microsoft.Maui.Controls.Foldable"
             xmlns:controls="clr-namespace:love2hina.Windows.MAUI.PhotoViewer.Controls"
             x:Class="love2hina.Windows.MAUI.PhotoViewer.Pages.DirectoryPage"
             x:Name="parent"
             Title="DirectoryView">

    <foldable:TwoPaneView>
        <foldable:TwoPaneView.Pane1>
            <controls:DirectoryView
                x:Name="directory"
                TargetDirectory="{Binding Source={x:Reference parent}, Path=TargetDirectory}" />
        </foldable:TwoPaneView.Pane1>
        <foldable:TwoPaneView.Pane2>
            <Label Text="Pane2 StackLayout"/>
        </foldable:TwoPaneView.Pane2>
    </foldable:TwoPaneView>
</ContentPage>
